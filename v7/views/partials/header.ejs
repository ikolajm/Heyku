<!--Header to include on all pages-->
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!--Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Raleway|Ranga" rel="stylesheet">
        <!--Font Awesome-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
        <!--Bootstrap-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <!--My CSS-->
        <link rel="stylesheet" href="/style.css" type="text/css">
        <!--Title-->
        <title>Heyku - The most poetic social media yet!</title>
        <!--Favicon-->
        <link rel="icon" href="https://www.designfreelogoonline.com/wp-content/uploads/2016/05/00274-Flower-Design-Free-Lotus-Logo-Maker-03.png" type="image/png">
    </head> 
    <body>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a href="/timeline"><img class="nav-logo" src="https://www.designfreelogoonline.com/wp-content/uploads/2016/05/00274-Flower-Design-Free-Lotus-Logo-Maker-03.png" alt="Heyku logo" ></a>
                <!--Hamburger menu-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse nav-link-container pull-right" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                      <!--SEARCH-->
                      <!--Due to express store data as req.query-->
                      <form id="search-contain" class="form-inline my-2" action="/timeline" method="GET">
                        <div class="form-group">
                          <input id="search" class="form-control mr" type="text" placeholder="Find posts by user" name="search" />
                          <input class="btn btn-sm btn-secondary" type="submit" value="Search" />
                        </div>
                      </form>
                      
                      
                      <!--Sign in/Sign up/Welcome-->
                      <div class="signin">
                        <% if (!currentUser) { %>
                          <a class="nav-item nav-link " href="/login">Login</a>
                          <a class="nav-item nav-link " href="/signup">Signup</a>
                        <% } else { %>
                          <p class="nav-item nav-link"><img src="<%= currentUser.image %>" ><%= currentUser.firstName %> <%= currentUser.lastName %></p>
                          <a class="nav-item nav-link logout" href="/logout">Logout</a>
                        <% } %>
                      </div>
                      
                    </div>
                </div>
            </div>
        </nav>
        
        <div class="container">
            
          <!--If error-->
          <% if (messageError && messageError.length > 0) { %>
             <div class="alert alert-danger flash" role="alert">
               <%= messageError %>
             </div>
          <% } %>
          <!--If success-->
          <% if (messageSuccess && messageSuccess.length > 0) { %>
              <div class="alert alert-success flash" role="alert">
                <%= messageSuccess %>
              </div>
          <% } %>